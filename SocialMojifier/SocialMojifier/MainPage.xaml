<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SocialMojifier.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to the Social Mojifier!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button 
            x:Name="CaptureImage"
            Text="Capture Image"
            Clicked="CaptureImage_Clicked"/>
        <Image
            x:Name="Capture" />
        <Button 
            x:Name="GetEmotion"
            Text="Get Emotion"
            Clicked="GetEmotion_Clicked"
            IsVisible="False"/>
    </StackLayout>
</ContentPage>
